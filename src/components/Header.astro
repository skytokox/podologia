---
import { Image } from 'astro:assets'
import logo from '../images/stupki.svg'
import { Icon } from 'astro-icon/components'
---
<header>
    <div class="w-full h-24 flex flex-row text-[#576081] justify-between font-medium">
        <div class="w-2/5 flex flex-row justify-start items-center ml-8 gap-6">
            <Image src={logo} alt="Logo BeautyRoom" class='w-12 h-16 sm:w-16 sm:h-16'/>
            <div class="flex flex-col justify-start">
                <p class="text-left text-p sm:text-h6">Gabinet <br> Podologiczny</p>
            </div>
        </div>
        <nav class="w-1/2 xl:w-1/3 h-full flex flex-row justify-end p-8 lg:p-0 lg:justify-evenly items-center">
            <p class="text-p hidden lg:block"><a href="#tiles">Oferta</a></p>
            <p class="text-p hidden lg:block"><a href="/">Galeria</a></p>
            <p class="text-p hidden lg:block"><a href="#about">O nas</a></p>
            <p class="text-p hidden lg:block"><a href="#contact">Kontakt</a></p>
            <Icon name="mdi:hamburger-menu" class="text-h3 lg:hidden" />
        </nav>
    </div>
</header>