---
import { Image } from 'astro:assets'
import logo from '../images/logo.svg'
import { Icon } from 'astro-icon/components'
import Menu from './Menu.vue'
---
<header id="header">
    <div class="w-full h-24 z-10"></div>
    <div class="w-full h-24 flex flex-row text-gray justify-between font-medium lg:px-8 fixed bg-creamy z-40 top-0">
        <div class="w-2/5 ml-4 flex flex-row justify-center items-center">
            <a class="w-full flex flex-row justify-start items-center gap-4" href="/#header">
            <Image src={logo} alt="Logo BeautyRoom" class='w-12 h-16 sm:w-16 sm:h-16'/>
            <div class="flex flex-col justify-start">
                <p class="text-left text-p sm:text-h6">Gabinet <br> Podologiczny</p>
            </div>
        </a>
        </div>
        <Menu client:load></Menu>
        <nav class="w-1/2 xl:w-1/3 h-full lg:flex flex-row justify-end lg:justify-evenly items-center hidden">
            <p class="w-1/5 text-p hidden lg:block text-end"><a href="/#tiles">Oferta</a></p>
            <p class="w-1/5 text-p hidden lg:block text-end"><a href="/cennik">Cennik</a></p>
            <p class="w-1/5 text-p hidden lg:block text-end"><a href="/#gallery">Galeria</a></p>
            <p class="w-1/5 text-p hidden lg:block text-end"><a href="/#about">O nas</a></p>
            <p class="w-1/5 text-p hidden lg:block text-end"><a href="/#contact">Kontakt</a></p>
        </nav>
    </div>
</header>