---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<div
    class="text-[#576081] bg-creamy w-full h-fit flex flex-col justify-between items-center py-4"
    id="contact"
>
    <p class="text-h3 sm:text-h2 font-bold pb-5">KONTAKT</p>
    <div
        class="w-full px-3 h-full flex flex-col sm:flex-row justify-evenly items-center gap-4 sm:gap-0"
    >
        <div
            class="w-1/2 xl:w-1/3 h-full flex flex-col items-center justify-center gap-6"
        >
            <div class="flex flex-col w-60 text-center sm:text-left">
                <p class="text-h6 sm:text-h5 font-bold">Gabinet podologiczny</p>
                <p class="text-h6 sm:text-h5">Sebastian Błasiak</p>
                <p class="text-h6 sm:text-h5">Renata Duda-Błasiak</p>
            </div>
            <div class="flex flex-col w-60 gap-4">
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:location" class="text-h3 sm:text-h2 text-black" />
                    <p class="text-p sm:text-h6 w-7/12">
                        Nowe Miasto 6
                        43-400 Cieszyn
                    </p>
                </div>
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:phone" class="text-h3 sm:text-h2 text-black" />
                    <p class="text-p sm:text-h6">512 475 825</p>
                </div>
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:facebook" class="text-h3 sm:text-h2 text-black" />
                    <p class="text-p sm:text-h6">Podologia Cieszyn</p>
                </div>
            </div>
        </div>
        <div class="mapouter lg:w-1/2 xl:w-2/5">
            <div class="gmap_canvas">
                <iframe
                    class="gmap_iframe"
                    width="100%"
                    title="google map"
                    src="https://maps.google.com/maps?width=600&height=400&hl=en&q=Beauty Room Cieszyn&t=&z=15&ie=UTF8&iwloc=B&output=embed"
                ></iframe><a href="https://linktr.ee/sparklesyt">sparklesyt</a>
            </div><style>
                .mapouter {
                    position: relative;
                    text-align: right;
                    width: 100%;
                    height: 400px;
                }
                .gmap_canvas {
                    overflow: hidden;
                    background: none !important;
                    width: 100%;
                    height: 400px !important;
                }
                .gmap_iframe {
                    height: 400px;
                }
            </style>
        </div>
    </div>
</div>
