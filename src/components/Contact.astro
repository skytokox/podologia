---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components'
---

<div
    class="text-[#576081] bg-creamy w-full h-2/3 flex flex-col justify-between items-center py-10"
    id="contact"
>
    <p class="text-h2 font-bold pb-10">KONTAKT</p>
    <div
        class="w-2/3 h-full flex flex-row justify-center items-center"
    >
        <div class="w-1/2 h-full flex flex-col items-center justify-center gap-6">
            <div class="flex flex-col w-60">
                <p class="text-h5 font-bold">Gabinet podologiczny</p>
                <p class="text-h5">Sebastian Błasiak</p>
                <p class="text-h5">Renata Duda Błasiak</p>
            </div>
            <div class="flex flex-col w-60 gap-4">
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:location" class="text-h2 text-black" />
                    <p class="text-h6">Nowe Miasto 6 <br>
                    43-400 Cieszyn
                    </p>
                </div>
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:phone" class="text-h2 text-black" />
                    <p class="text-h6">512 475 825</p>
                </div>
                <div class="flex flex-row justify-start items-center gap-4">
                    <Icon name="mdi:facebook" class="text-h2 text-black" />
                    <p class="text-h6">Podologia Cieszyn</p>
                </div>
            </div>
        </div>
        <div class="mapouter">
            <div class="gmap_canvas">
                <iframe
                    class="gmap_iframe"
                    frameborder="0"
                    scrolling="no"
                    marginheight="0"
                    marginwidth="0"
                    src="https://maps.google.com/maps?width=600&height=400&hl=en&q=Beauty Room Nowe miasto 6 Cieszyn&t=&z=15&ie=UTF8&iwloc=B&output=embed"
                ></iframe><a href="https://ytmp4.one">ytmp4</a>
            </div><style>
                .mapouter {
                    position: relative;
                    text-align: right;
                    width: 600px;
                    height: 400px;
                }
                .gmap_canvas {
                    overflow: hidden;
                    background: none !important;
                    width: 600px;
                    height: 400px;
                }
                .gmap_iframe {
                    width: 600px !important;
                    height: 400px !important;
                }
            </style>
        </div>
    </div>
</div>
