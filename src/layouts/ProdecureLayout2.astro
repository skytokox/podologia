---
const { frontmatter } = Astro.props;
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import dwojka from "../images/dwojka.jpg";
import img6 from "../images/img6.jpg";
let image;
let imagestr: string = frontmatter.image;
console.log(frontmatter.image);
if (imagestr.includes("img6")) {
	image = img6;
} else {
	image = dwojka;
}
---

<Layout title={frontmatter.name}>
	<div class="w-full h-fit mb-8 flex flex-col items-center justify-center pt-3">
		<div class="flex flex-row items-center text-left">
			<p
				class="text-h5 font-semibold text-white w-5/6 bg-light-green rounded-e-full pl-4 py-2"
			>
				{frontmatter.name}
			</p>
		</div>
		<!-- <Image
			src={image}
			alt="Renata Duda-Błasiak i Sebastian Błasiak"
			width="1600"
			height="900"
			class="h-2/5 xl:h-1/5 xl:w-1/3 pt-3"
		/> -->
		<Image
			src={image}
			alt="Renata Duda-Błasiak i Sebastian Błasiak"
			class="h-72 w-full pt-3"
		/>
		<div class="flex flex-col justify-evenly items-center gap-3 pt-3 px-3">
			<div
				class="text-p sm:text-h6 xl:w-2/5 text-pretty h-2/3 flex flex-col gap-2 items-start justify-center"
			>
				<p class="text-h6 font-semibold">
					{frontmatter.starter}
				</p>
				<ul class="list-disc pl-5">
					{frontmatter.steps.map((step) => <li>{step}</li>)}
				</ul>
				<p class="text-p">
					{frontmatter.text_1}
				</p>
				<p class="text-p">
					{frontmatter.text_2}
				</p>
				<p class="text-p">
					{frontmatter.text_3}
				</p>
				<p class="text-p">
					{frontmatter.text_4}
				</p>
			</div>
			<div class="flex flex-row justify-center">
				<p class="text-h6"><a href="/">Powrót</a></p>
			</div>
		</div>
	</div>
</Layout>
